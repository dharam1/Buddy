<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popup_element"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:alpha="1.0"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="50dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/close"/>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/dis"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_centerVertical="true"
        android:background="@drawable/rounded_edittext_fifth">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/count"
            android:layout_marginTop="-40dp"
            android:layout_gravity="end|top"
            />
        <EditText
            android:id="@+id/edittext"
            android:maxEms="1"
            android:scrollbars="none"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="30"
            android:padding="5dp"
            android:maxLines="1"
            android:hint="Type Topic..."/>

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nice, Location Selected now enter the Topic..."
        android:textColor="#fff"
        android:layout_above="@+id/dis"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:paddingLeft="10dp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/add_activity"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:gravity="center">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Global"
            android:id="@+id/btn_global" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Public"
            android:id="@+id/btn_public"/>
    </RadioGroup>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/add_activity"
        android:layout_alignParentBottom="true"
        android:text="NEXT"
        android:background="#ff0000"
        android:textColor="#fff"
        />




</RelativeLayout>