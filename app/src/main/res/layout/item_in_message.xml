<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">



    <TextView
        android:id="@+id/message_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bubble_in"
        android:id="@+id/rr"
        app:layout_constraintTop_toBottomOf="@+id/message_user"
        android:padding="8dp">
        <TextView
            android:id="@+id/message_text"
            android:text="hi man, how are you?"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="240dp"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:layout_marginLeft="4dp"/>

        <TextView
            android:id="@+id/message_time"
            android:layout_width="wrap_content"
            android:text="11:08"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_toRightOf="@+id/message_text"
            android:layout_alignBottom="@+id/message_text"
            android:layout_marginLeft="8dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/message_date"
        android:text="2 Sept, 2017"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/message_user"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/message_user"
        android:layout_marginTop="4dp" />
</android.support.constraint.ConstraintLayout>